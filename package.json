{
  "name": "express-boilerplate",
  "version": "0.1.0",
  "description": "This repo contains template project for creating APIs in express.",
  "main": "server.js",
  "scripts": {
    "test": "mocha --recursive \"./api/**/*.test.js\"",
    "start": "node server.js",
    "lint": "./node_modules/.bin/eslint .",
    "lint:fix": "./node_modules/.bin/eslint . --fix",
    "generate-docs": "./node_modules/apidoc/bin/apidoc -i ./ -f \".*\\.route[s]?.js$\" -o docs/"
  },
  "keywords": [
    "template",
    "microservices"
  ],
  "author": "Vijay Krishnavanshi",
  "license": "MIT",
  "dependencies": {
    "apidoc": "^0.17.7",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-validation": "^1.0.2",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.5.1",
    "morgan": "^1.9.1",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nock": "^9.6.1",
    "prettier": "^1.12.1"
  }
}
